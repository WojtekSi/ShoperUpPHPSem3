{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('user_add') }}">Dodaj nowego użytkownika</a>

    {% for user in users %}
        <li><a href="{{ path('user_edit', {'id': user.id}) }}">{{ user.name }}</a></li>
        <form method="post" action="{{ path('user_delete', {'id': user.id}) }}">
            <input type="submit" value="usuń">
        </form>
    {% endfor %}
{% endblock %}